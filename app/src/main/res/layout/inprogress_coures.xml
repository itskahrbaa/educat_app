<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="205dp"
    android:layout_height="291dp"
    android:layout_marginEnd="8dp"
    android:elevation="3dp"
    app:cardCornerRadius="9dp">

    <ImageView
        android:id="@+id/c_thumbnill"
        android:layout_width="205dp"
        android:layout_height="291dp"
        android:foreground="@drawable/effect_thumbnill2"
        android:scaleType="centerCrop"
        android:src="@drawable/profileimg" />

    <TextView
        android:id="@+id/c_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/alegreya_sans_light"
        android:text="Dieter Rams"
        android:textColor="@color/white"
        android:textSize="10sp" />


    <TextView
        android:id="@+id/c_title"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="206dp"
        android:fontFamily="@font/jost_bold"
        android:text="A Simple Guide to Pricing Your Virtual Products"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/c_progress"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="266.5dp"
        app:indicatorColor="@color/progressBar_c"
        app:trackColor="@color/progressBar"
        app:trackCornerRadius="60dp" />


</androidx.cardview.widget.CardView>