<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Educat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primarySColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    <style name="Theme.Educat.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemIconTint">@color/navigation_bar</item>
        <item name="itemTextColor">@color/navigation_bar</item>
    </style>
    <style name="Theme.tabs" parent="Base.Widget.Material3.TabLayout">
        <item name="android:background">@null</item>
        <item name="enforceTextAppearance">false</item>
        <item name="tabTextColor">@color/tab_text_color</item>
        <item name="tabIndicator">@drawable/indicator</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">@color/progressBar_c</item>
        <item name="tabIndicatorAnimationDuration">1000</item>
    </style>
</resources>